{% extends 'base.html.twig' %}

{% block title %}Voiture {% endblock %}

{% block body %}
    <h1>La Liste des voitures </h1>

    <table class="table table-hover">
        <thead>
            <tr class="table-dark">
                <th scope="row">Id</th>
                <th scope="row">Puissance</th>
                <th scope="row">NbPorte</th>
                <th scope="row">Kilometrage</th>
                <th scope="row">Marque</th>
                <th scope="row">Type</th>
                <th scope="row">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for voiture in voitures %}
            <tr>
                <td>{{ voiture.id }}</td>
                <td>{{ voiture.nbPorte }}</td>
                <td>{{ voiture.puissance }}</td>
                <td>{{ voiture.kilometrage }}</td>
                <td>{{ voiture.marque }}</td>
                <td>{{ voiture.type }}</td>
                <td>
                    <a href="{{ path('app_voiture_show', {'id': voiture.id}) }}">show</a>
                    <a href="{{ path('app_voiture_edit', {'id': voiture.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_voiture_new') }}">Create new</a>
{% endblock %}
